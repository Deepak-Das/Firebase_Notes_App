<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/note_item_title"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/note_item_description"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/note_item_title"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        android:text="Description" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/note_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/note_item_description"
        android:layout_marginStart="7dp"
        android:layout_marginTop="-29dp"
        android:layout_toEndOf="@+id/note_item_description"
        android:text="Done" />

</RelativeLayout>